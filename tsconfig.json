{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"lib": ["ES6"],
		"allowJs": true,
		"outDir": "build",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.*"],
	"exclude": ["src/**/*.test.ts"]
}
